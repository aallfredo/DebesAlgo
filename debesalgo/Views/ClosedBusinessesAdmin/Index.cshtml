@model IEnumerable<debesalgo.Models.ClosedBusiness>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-responsive">
    <table class="table table-striped table-hover closed-business-admin">
        <tr>
            <th>
                <span title="Item actions" class='glyphicon glyphicon-list' aria-hidden='true'></span>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateClosed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Img)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Details)
            </th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    <div class="btn-group-vertical item-actions btn-group-xs" role="group" aria-label="item-actions">
                        <a title="Edit item" class="btn btn-default" href="/ClosedBusinessesAdmin/Edit/@Html.DisplayFor(modelItem => item.Id)">
                            <span class='glyphicon glyphicon-pencil' aria-hidden='true'></span>
                        </a>
                        <a title="Delete item" class="btn btn-default" href="/ClosedBusinessesAdmin/Delete/@Html.DisplayFor(modelItem => item.Id)">
                            <span class='glyphicon glyphicon-remove-sign' aria-hidden='true'></span>
                        </a>
                    </div>
                </td>
                <td>
                    <a href="/ClosedBusinessesAdmin/Details/@Html.DisplayFor(modelItem => item.Id)">
                        @Html.DisplayFor(modelItem => item.Name)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateClosed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrentStatus)
                </td>
                <td>
                    <a href="@Html.DisplayFor(modelItem => item.ArticleLink)" target="_blank"><span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> Link</a>
                </td>
                <td>
                    <a href="@Html.DisplayFor(modelItem => item.Img)" target="_blank"><img src="@Html.DisplayFor(modelItem => item.Img)" class="establishment-img-preview" /></a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Details)
                </td>
            </tr>
}

    </table>
</div>